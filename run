case "$1" in
	'db')
		sh scripts/resetdb.sh
	;;
	'')
		rails s
	;;
	'migrate')
		rake db:migrate
		sh scripts/resetdb.sh
	;;
	'help')
		echo 'Use ./run migrate - to create and migrate db'
		echo 'Use ./run db - to clear db'
		echo 'Use ./run - to run application'
	;;
	'deploy')
	    bundle exec rake package
	    ansible
	;;
	*)
		echo 'Use ./run help to know more'
	;;
esac
